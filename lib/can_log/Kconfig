menuconfig CAN_LOG
    bool "CAN Log Backend"
    depends on CAN
    depends on LOG
    # this currently only supports deferred mode
    depends on LOG_MODE_DEFERRED
    depends on LOG_PROCESS_THREAD
    default y


if CAN_LOG

    module = CAN_LOG
    module-str = CAN Logger
    source "subsys/logging/Kconfig.template.log_config"

    config CAN_LOG_ID
        hex
        prompt "CAN Log ID"
        default 0x100
        help
          CAN identifier used for logging messages.

endif